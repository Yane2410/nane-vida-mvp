# ========================================# Django

# NANE VIDA - Environment VariablesSECRET_KEY=change-me-please

# ========================================DEBUG=1

# Copia este archivo como .env y configura tus valoresALLOWED_HOSTS=127.0.0.1,localhost

# NUNCA compartas tu archivo .env en git

# Database (leave empty to use SQLite by default)

# ========================================DATABASE_URL=

# Django Core Settings

# ========================================# CORS

# CRITICAL: Genera una nueva SECRET_KEY para producci√≥nCORS_ALLOWED_ORIGINS=http://localhost:5173

# python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-change-in-production

# Environment: development, staging, production
DJANGO_ENV=development

# Debug mode (NEVER use True in production!)
DEBUG=True

# Allowed hosts (comma separated, required in production)
ALLOWED_HOSTS=localhost,127.0.0.1

# ========================================
# Database Configuration
# ========================================
# Option 1: Use DATABASE_URL (recommended)
# Format examples:
#   PostgreSQL: postgresql://user:password@host:port/dbname
#   MySQL:      mysql://user:password@host:port/dbname
#   SQLite:     sqlite:///path/to/db.sqlite3
DATABASE_URL=

# Option 2: Use individual variables (if DATABASE_URL is not set)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3
DB_USER=
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=5432

# ========================================
# CORS & Frontend Configuration
# ========================================
# Frontend URL for CORS (production)
FRONTEND_ORIGIN=

# Backend URL for CSRF (production)
BACKEND_ORIGIN=

# ========================================
# JWT Token Configuration
# ========================================
# Access token lifetime in minutes (default: 15)
JWT_ACCESS_LIFETIME_MINUTES=15

# Refresh token lifetime in days (default: 7)
JWT_REFRESH_LIFETIME_DAYS=7

# ========================================
# Email Configuration (opcional)
# ========================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# ========================================
# Security & Performance (opcional)
# ========================================
# Rate limiting
RATELIMIT_ENABLE=True

# Sentry DSN for error tracking (production)
SENTRY_DSN=

# AWS S3 for media files (opcional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1
