# ========================================
# NANE VIDA Frontend - Environment Variables
# ========================================
# Copia este archivo como .env para desarrollo local
# Para producci√≥n, configura estas variables en tu plataforma de deployment

# ========================================
# API Configuration
# ========================================
# Backend API Base URL
VITE_API_BASE=http://127.0.0.1:8000/api

# ========================================
# Security Configuration
# ========================================
# Enable security headers (true/false)
VITE_ENABLE_SECURITY_HEADERS=true

# Content Security Policy
VITE_CSP_ENABLED=true

# ========================================
# Environment
# ========================================
# Environment: development, staging, production
VITE_ENV=development

# Enable debug mode (development only)
VITE_DEBUG=true

# ========================================
# Feature Flags (opcional)
# ========================================
# Enable analytics
VITE_ANALYTICS_ENABLED=false

# Analytics ID (Google Analytics, etc.)
VITE_ANALYTICS_ID=

# Enable error tracking (Sentry, etc.)
VITE_ERROR_TRACKING_ENABLED=false
VITE_SENTRY_DSN=

# ========================================
# Performance (opcional)
# ========================================
# API timeout in milliseconds
VITE_API_TIMEOUT=30000

# Maximum retries for failed requests
VITE_API_MAX_RETRIES=3
